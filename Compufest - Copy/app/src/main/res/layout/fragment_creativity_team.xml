            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:enabled="false"
                android:text="Creativity Heads"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_post_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Mayuri Rothe"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_member_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Radhika Dhote"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_member_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Shruti Patrikar"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_member_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:background="@android:color/black"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:enabled="false"
                android:text="Creativity Co Heads"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_post_text_size" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Arya Sabane"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_member_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Shruti Bhagwat"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_member_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Rasika Rake"
                android:textColor="#ffffff"
                android:textSize="@dimen/teams_member_text_size" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>

